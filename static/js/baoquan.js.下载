  mainInfo.id = "baoquan-main";
  mainInfo.className = "baoquan-main";
  mainInfo.setAttribute('style','margin-left: 140px; padding-top: 24px;');

  tip.id = "baoquan-tip";
  tip.className = "baoquan-tip";
  tip.setAttribute('style','margin-left: 10px');

  span.id = "baoquan-word";
  span.className = "baoquan-word";
  span.innerText="本文已在保全网存证确权，侵权必究！";
  span.setAttribute('style','font-size: 16px; color: #333');

  link.id = "baoquan-link";
